<Window x:Class="Waitless.PaymentErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Waitless"
        mc:Ignorable="d"
        Title="PaymentErrorDialog" Top="32" Left="25" Height="300" MinHeight="300" MaxHeight="300" MaxWidth="300" MinWidth="300" Width="300" Background="Wheat">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>

        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="You Cant Pey Yet:" FontFamily="MV Boli" FontWeight="Bold" FontSize="25" TextWrapping="Wrap" />
        <TextBlock Grid.Row="1"  Name="ErrorMessage" FontFamily="MV Boli" FontSize="18" TextWrapping="Wrap" />
        <Button Grid.Row="2" FontFamily="MV Boli" Background="GreenYellow" FontSize="44" Click="ConfirmButton_Click">Dismiss</Button>

    </Grid>
</Window>
