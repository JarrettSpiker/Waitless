<Window x:Class="Waitless.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Waitless"
        mc:Ignorable="d"
        Title="Login" Height="192" MinHeight="192" MaxHeight="192" MinWidth="240" MaxWidth="240" Width="240">
    <Grid Background="#FFF0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Username:" FontFamily="MV Boli" FontSize="18" />
        <TextBox x:Name="UsernameField" Grid.Row="1" FontFamily="MV Boli" FontSize="18"></TextBox>
        <TextBlock Grid.Row="2" Text="Password:" FontFamily="MV Boli" FontSize="18" />
        <PasswordBox x:Name="PasswordField" Grid.Row="3" FontFamily="Symbol" PasswordChar="·"  FontSize="18"></PasswordBox>
        <Button x:Name="LoginButton" Grid.Row="4" FontFamily="MV Boli" FontSize="18" Height="33" VerticalAlignment="Bottom" Click="LoginButton_Click">Login</Button>

    </Grid>
    </Window>
