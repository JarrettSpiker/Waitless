<UserControl x:Class="Waitless.Circle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Waitless"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="45"
             AllowDrop = "True">
    <Grid>
        <Ellipse x:Name="circleUI" 
                 Height="45" Width="45"
                 Fill="Blue" />
        <TextBlock Name="Initials" FontSize="16" Text="JD" Margin="12,12,0,0" FontWeight="Bold"/>
    </Grid>
</UserControl>
