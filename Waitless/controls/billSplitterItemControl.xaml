<UserControl x:Class="Waitless.controls.billSplitterItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Waitless.controls"
             mc:Ignorable="d">
    <Grid>
    <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Name="ItemName" Text="Steak" Foreground="Blue"/>
            <StackPanel Grid.Column="1" Width="60" Name="DropArea" Margin="2 2 2 2" />
            <TextBlock Grid.Column="2" Name="Price" Text="25.95" HorizontalAlignment="Right" Foreground="Blue"/>
    </Grid>
</UserControl>
