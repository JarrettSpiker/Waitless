<UserControl x:Class="Waitless.controls.billSplitterItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Waitless.controls"
             mc:Ignorable="d">
    <Grid
        Background="Bisque"
        AllowDrop="True"
        Drop="panel_Drop"
        Height="25">
    <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Viewbox Grid.Column="0" Margin="3,0">
            <TextBlock VerticalAlignment="Center"  Name="ItemName" Text="Steak" Foreground="Blue"/>
        </Viewbox>
        <StackPanel Grid.Column="1"
                    Name="DropArea"

                    Orientation="Horizontal"
                    AllowDrop="True"
                    Drop="panel_Drop">

            <TextBlock> </TextBlock>
        </StackPanel>
        <Viewbox  Grid.Column="2">
            <TextBlock VerticalAlignment="Center" Name="ItemPrice" Text="25.95" HorizontalAlignment="Right" Foreground="Blue"/>
        </Viewbox>
            
    </Grid>
</UserControl>
