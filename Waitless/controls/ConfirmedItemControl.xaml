<UserControl x:Class="Waitless.controls.ConfirmedItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Waitless.controls"
             mc:Ignorable="d">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Name="ItemName" Text="Steak" Foreground="Blue"/>
        <Button Grid.Column="1" Name="ReorderButton" Content="Reorder" Foreground="Blue" Background="White" Margin="2 2 2 2" FontSize="9"/>
        <TextBlock Grid.Column="2" Name="Quantity" Text="1" Foreground="Blue" HorizontalAlignment="Right"/>
        <TextBlock Grid.Column="3" Name="Price" Text="25.95" HorizontalAlignment="Right" Foreground="Blue"/>
    </Grid>
</UserControl>
